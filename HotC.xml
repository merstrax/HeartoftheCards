						<Anchor point="CENTER" relativeTo="$parentRankBorder">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				UpdateTalentButton(self, button)
