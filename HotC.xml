	<GameTooltip name="HotCTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"/>

	<Button name="SpellButton" virtual="true" hidden="true">
		<Size>
			<AbsDimension x="32" y="32"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentSlot" file="Interface\Buttons\UI-EmptySlot-White">
					<Size>
						<AbsDimension x="36" y="36"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" parentKey="icon">
					<Size>
						<AbsDimension x="32" y="32"/>
					</Size>
				</Texture>
			</Layer>
		</Layers>
		<NormalTexture name="$parentNormalTexture" file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="48" y="48"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<Scripts>
            <OnLoad>
                this:RegisterForClicks("LeftButtonDown", "RightButtonDown");
            </OnLoad>
			<OnEnter>
				HotCTooltip:SetOwner(self, "ANCHOR_RIGHT");
				HotCTooltip:SetHyperlink("spell:"..this.link);
				HotCTooltip:AddLine(" ");
				HotCTooltip:AddLine("Requires Level: "..this.level);
				HotCTooltip:Show();
			</OnEnter>
			<OnLeave>
				HotCTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>

	<Button name="TalentButton" inherits="SpellButton" virtual="true" hidden="true">
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentRankBorder" file="Interface\TalentFrame\TalentFrame-RankBorder" parentKey="badge">
					<Size>
						<AbsDimension x="36" y="30"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER" relativePoint="BOTTOMRIGHT">
							<Offset>
