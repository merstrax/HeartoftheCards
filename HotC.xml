<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Script file="HotC.lua"/>
	<Include file="HotC_Template.xml" />

	<GameTooltip name="HotCTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"/>

	<Frame name="HotCMainFrame" parent="UIParent" hidden="false" toplevel="true" framestrata="FULLSCREEN">
		<Size>
			<AbsDimension x="650" y="530"/>
		</Size>
		<Anchors>
 			<Anchor point="CENTER"/>
 		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTitleText" inherits="GameFontNormal" text="Heart of the Cards">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-8"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			
			<Layer level="BORDER">
				<!--Top of Borderframe-->
				<Texture name="$parentTopLeft" file="Interface\PaperDollInfoFrame\UI-GearManager-Border">
					<Size x="64" y="28"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" />
					</Anchors>
					<TexCoords left="0.501953125" right="0.625" top="0.0" bottom="0.4375"  />
				</Texture>
				<Texture name="$parentTopRight" file="Interface\PaperDollInfoFrame\UI-GearManager-Border">
					<Size x="64" y="28"/>
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" />
					</Anchors>
					<TexCoords left="0.625" right="0.75" top="0.0" bottom="0.4375"  />
				</Texture>
				<Texture name="$parentTop" file="Interface\PaperDollInfoFrame\UI-GearManager-Border">
					<Size y="64"/>
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parentTopRight" relativePoint="TOPLEFT" />
						<Anchor point="TOPLEFT" relativeTo="$parentTopLeft" relativePoint="TOPRIGHT" />
					</Anchors>
					<TexCoords left="0.25" right="0.369140625" top="0.0" bottom="1.0"  />
				</Texture>

				<!--Bottom of Borderframe -->
				<Texture name="$parentBottomLeft" file="Interface\PaperDollInfoFrame\UI-Character-General-BottomLeft">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT" x="5"/>
					</Anchors>
					<TexCoords top="0.6523" bottom="0.7148" left="0.0430" right="0.1055"  />
				</Texture>
				<Texture name="$parentBottomRight" file="Interface\PaperDollInfoFrame\UI-Character-General-BottomRight">
					<Size x="16" y="16" /> 
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-2"/>
					</Anchors>
					<TexCoords top="0.6523" bottom="0.7148" left="0.6094" right="0.7344"  />			
				</Texture>
				<Texture name="$parentBottom" file="Interface\PaperDollInfoFrame\UI-Character-General-BottomRight">
					<Size y="16" />
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentBottomRight" relativePoint="BOTTOMLEFT" />
						<Anchor point="BOTTOMLEFT" relativeTo="$parentBottomLeft" relativePoint="BOTTOMRIGHT" />
					</Anchors>
					<TexCoords top="0.6523" bottom="0.7148" left="0.0430" right="0.2930"  />			
				</Texture>

				<!--Sides of Borderframe-->
				<Texture name="$parentLeft" file="Interface\PaperDollInfoFrame\UI-Character-General-BottomLeft">
					<Size x="16" y="32" xoffset="4"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTopLeft" relativePoint="BOTTOMLEFT" x="5" y="2"/>
						<Anchor point="BOTTOMLEFT" relativeTo="$parentBottomLeft" relativePoint="TOPLEFT" x="5"/>
					</Anchors>
					<TexCoords top="0.4523" bottom="0.5148" left="0.0430" right="0.1055"  />
				</Texture>

				<Texture name="$parentRight" file="Interface\PaperDollInfoFrame\UI-Character-General-BottomRight">
					<Size x="16" y="16" /> 
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parentTopRight" relativePoint="BOTTOMRIGHT" x="-2" y="2"/>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentBottomRight" relativePoint="TOPRIGHT" x="-2"/>
					</Anchors>
					<TexCoords top="0.4523" bottom="0.5148" left="0.6094" right="0.7344"  />			
				</Texture>
			</Layer>
				
		</Layers>
		<Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="2" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			
			<!--
				This is the View Frame. 
				It contains all other frames that will be swappable through tabs 
			-->
			<Frame name="$parentViewFrame" hidden="false" parentKey="viewFrame" enableMouse="true">
				<Size>
					<AbsDimension x="630" y="480"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="10" y="-30"/>
						</Offset>
					</Anchor>
				</Anchors>
				
				<Frames>
					<Frame name="$parentClassFrame" hidden="false" parentKey="classFrame">
						<Size>
							<AbsDimension x="630" y="480"/>
						</Size>
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
								<Offset>
									<AbsDimension x="4" y="0"/>
								</Offset>
							</Anchor>
							<Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
								<Offset>
									<AbsDimension x="-4" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Frames>
							<Frame name="$parentNavBar" hidden="false" parentKey="navBar">
								<Size x="64" y="32" />
								<Anchors>
									<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
										<Offset>
											<AbsDimension x="5" y="-5"/>
										</Offset>
									</Anchor>
									<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
										<Offset>
											<AbsDimension x="-5" y="-5"/>
										</Offset>
									</Anchor>
								</Anchors>
								<Backdrop edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true" alphaMode="BLEND">
									<EdgeSize><AbsValue val="5"/></EdgeSize>
									<TileSize><AbsValue val="5"/></TileSize>
									<BackgroundInsets><AbsInset left="4" right="5" top="5" bottom="4"/></BackgroundInsets>
								</Backdrop>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture name="$parentBG" file="Interface\Addons\HotC\Resources\UI-Background-Rock" parentKey="bg">
											<Anchors><Anchor point="TOPLEFT" x="0" y="0"/><Anchor point="BOTTOMRIGHT" x="0" y="0"/></Anchors>
										</Texture>
									</Layer>
									<Layer level="ARTWORK">
										<FontString name="TalentPointsText" inherits="GameFontNormalSmall" justifyH="RIGHT" text="0/51">
											<Size x="0" y="15"/>
											<Anchors>
												<Anchor point="RIGHT">
													<Offset x="-12" y="1"/>
												</Anchor>
											</Anchors>
										</FontString>
										<FontString name="TalentSpentText" inherits="GameFontNormalSmall" justifyH="RIGHT" text="TE:">
											<Size x="0" y="15"/>
											<Anchors>
												<Anchor point="RIGHT" >
													<Offset x="-45" y="1"/>
												</Anchor>
											</Anchors>
										</FontString>
									</Layer>
								</Layers>
							</Frame>
							<Frame name="SpellFrame" hidden="false" parentKey="spellFrame">
								<Size>
									<AbsDimension x="300" y="435"/>
								</Size>
								<Anchors>
									<Anchor point="TOPLEFT" relativeTo="$parentNavBar" relativePoint="BOTTOMLEFT">
										<Offset>
											<AbsDimension x="0" y="-10"/>
										</Offset>
									</Anchor>
								</Anchors>
								<Backdrop edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true" alphaMode="BLEND">
									<EdgeSize><AbsValue val="5"/></EdgeSize>
									<TileSize><AbsValue val="5"/></TileSize>
									<BackgroundInsets><AbsInset left="4" right="5" top="5" bottom="4"/></BackgroundInsets>
								</Backdrop>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture name="$parentBG" file="Interface\Addons\HotC\Resources\UI-Background-Paper" parentKey="bg">
											<Size x="392" y="495" />
											<Anchors>
												<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
													<AbsDimension x="0" y="-5"/>
												</Anchor>
											</Anchors>
										</Texture>
									</Layer>
								</Layers>
							</Frame>
							<Frame name="$parentTalentFrame" hidden="false" parentKey="talentFrame">
								<Size>
									<AbsDimension x="300" y="435"/>
								</Size>
								<Anchors>
									<Anchor point="TOPRIGHT" relativeTo="$parentNavBar" relativePoint="BOTTOMRIGHT">
										<Offset>
											<AbsDimension x="0" y="-10"/>
										</Offset>
									</Anchor>
								</Anchors>
								<Backdrop edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true" alphaMode="BLEND">
									<EdgeSize><AbsValue val="5"/></EdgeSize>
									<TileSize><AbsValue val="5"/></TileSize>
									<BackgroundInsets><AbsInset left="4" right="5" top="5" bottom="4"/></BackgroundInsets>
								</Backdrop>
								<Layers>
									<Layer level="BACKGROUND">
										<Texture name="$parentBG" file="Interface\Addons\HotC\Resources\UI-Background-Rock" parentKey="bg">
											<Anchors><Anchor point="TOPLEFT" x="0" y="0"/><Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="0" y="0"/></Anchors>
										</Texture>
										<Texture name="HotCTalentFrameBackgroundTopLeft">
											<Size x="256" y="256"/>
											<Anchors>
												<Anchor point="TOPLEFT"/>
												<Anchor point="RIGHT">
													<Offset x="-40" y="0"/>
												</Anchor>
												<Anchor point="BOTTOM">
													<Offset x="0" y="76"/>
												</Anchor>
											</Anchors>
											<TexCoords left="0.0" right="1.0" top="0.0" bottom="1.0"/>
										</Texture>
										<Texture name="HotCTalentFrameBackgroundTopRight">
											<Size x="44" y="256"/>
											<Anchors>
												<Anchor point="TOPRIGHT"/>
												<Anchor point="BOTTOMLEFT" relativeTo="HotCTalentFrameBackgroundTopLeft" relativePoint="BOTTOMRIGHT"/>
											</Anchors>
											<TexCoords left="0.0" right="0.6875" top="0.0" bottom="1.0"/>
										</Texture>
										<Texture name="HotCTalentFrameBackgroundBottomLeft">
											<Size x="256" y="75"/>
											<Anchors>
												<Anchor point="BOTTOMLEFT"/>
												<Anchor point="TOPRIGHT" relativeTo="HotCTalentFrameBackgroundTopLeft" relativePoint="BOTTOMRIGHT"/>
											</Anchors>
											<TexCoords left="0.0" right="1.0" top="0.0" bottom="0.5859375"/>
										</Texture>
										<Texture name="HotCTalentFrameBackgroundBottomRight">
											<Size x="44" y="75"/>
											<Anchors>
												<Anchor point="BOTTOMRIGHT"/>
												<Anchor point="TOPLEFT" relativeTo="HotCTalentFrameBackgroundTopLeft" relativePoint="BOTTOMRIGHT"/>
											</Anchors>
											<TexCoords left="0.0" right="0.6875" top="0.0" bottom="0.5859375"/>
										</Texture>
									</Layer>
								</Layers>
							</Frame>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
			<Button name="$parentTab1" inherits="HotCTabTemplate" id="1" text="CORE">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="6" y="4.75"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentTab2" inherits="HotCTabTemplate" id="2" text="AUGMENTS">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-15" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentTab3" inherits="HotCTabTemplate" id="3" text="OVERVIEW">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab2" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-15" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentTab4" inherits="HotCTabTemplate" text="Options" id="4">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTab3" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-15" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				OnLoad(self);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>