<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/">    
    
    <Script file="HotC_Template.lua"/>
    
    <Button name="HotCSpellButtonTemplate" virtual="true" hidden="true">
		<Size>
			<AbsDimension x="32" y="32"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentSlot" file="Interface\Buttons\UI-EmptySlot-White">
					<Size>
						<AbsDimension x="36" y="36"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture name="$parentIcon" parentKey="icon">
					<Size>
						<AbsDimension x="30" y="30"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<NormalTexture name="$parentNormalTexture" file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="48" y="48"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<Scripts>
            <OnLoad>
                this:RegisterForClicks("LeftButtonDown", "RightButtonDown");
            </OnLoad>
			<OnEnter>
				HotCTooltip:SetOwner(self, "ANCHOR_RIGHT");
				HotCTooltip:SetHyperlink("spell:"..this.link);
				HotCTooltip:AddLine(" ");
				HotCTooltip:AddLine(this.costText);
				HotCTooltip:AddLine("Requires Level: "..this.level);
				HotCTooltip:Show();
			</OnEnter>
			<OnLeave>
				HotCTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>

	<Button name="HotCTalentButton" inherits="HotCSpellButtonTemplate" virtual="true" hidden="true">
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentRankBorder" file="Interface\TalentFrame\TalentFrame-RankBorder" parentKey="badge">
					<Size>
						<AbsDimension x="36" y="30"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER" relativePoint="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="-2" y="4"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="$parentRank" inherits="GameFontNormalSmall" parentKey="rank">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parentRankBorder">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				UpdateTalentButton(self, button)
			</OnClick>
		</Scripts>
	</Button>

	<Frame name="HotCSpellButtonFrame" virtual="true" hidden="true">
		<Size x="108" y="40" />
		<Frames>
			<Button name="$parentButton" inherits="HotCSpellButtonTemplate" parentKey="button" hidden="false">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT" x="4" y="0" />
				</Anchors>
				<Scripts>
					<OnClick>
						UpdateSpellButton(self, button)
					</OnClick>
				</Scripts>
			</Button>
			<Frame name="$parentText" parentKey="text">
				<Size x="64" y="40" />
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentButton" relativePoint="RIGHT" x="4" y="0" />
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" inherits="GameFontNormalSmall" text="Test Text" parentKey="text" justifyH="LEFT" wordwrap="true" maxlines="3">
							<Size x="64" y="40"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>

